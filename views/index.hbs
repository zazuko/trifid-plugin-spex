<div id="container">
  <div id="spex"></div>
</div>

<script type="text/javascript" src="static/spex.umd.min.js"></script>
<link rel="stylesheet" type="text/css" href="static/spex.css">
<style type="text/css">
  html,
  body {
    height: 100%;
  }

  body {
    display: flex;
    flex-direction: column;
  }

  #container {
    flex-grow: 1;

    display: flex;
    flex-direction: column;

    overflow: hidden;
  }

  #container > * {
    flex-grow: 1;

    overflow: hidden;
  }
</style>

<script type="text/javascript">
  //<![CDATA[
  window.onload = function () {
    const options = JSON.parse('{{{ options }}}')
    window.spex.render('#spex', options)
  }
//]]>
</script>
